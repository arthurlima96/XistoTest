<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xistotest.com.br.xistotest.MainActivity"
    android:weightSum="1">

    <View
        android:layout_marginTop="20dp"
        android:background="#A8A8A8"
        android:layout_width = "fill_parent"
        android:layout_height="2dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xisto Test"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#01244D"
        android:layout_weight="0"
        android:layout_gravity="center" />

    <View
        android:layout_marginTop="10dp"
        android:background="#A8A8A8"
        android:layout_width="fill_parent"
        android:layout_height="2dip" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="224dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_logo"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:text="Prevalência da Doença"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <View
        android:layout_marginTop="30dp"
        android:background="#A8A8A8"
        android:layout_width="fill_parent"
        android:layout_height="2dip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:text="Responta as perguntas para obter as probabilidades de prevalência da doença"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="#01244D"
        android:textSize="18sp"
        android:layout_weight="0"/>

    <View
        android:layout_marginTop="30dp"
        android:background="#A8A8A8"
        android:layout_width="fill_parent"
        android:layout_height="2dip" />

</LinearLayout>
